@model List<CommunityToolShedMVC.Models.Tool>

@{
    ViewBag.Title = "Tools";
}

<h2>Tools</h2>

<table class="table table-sm table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Tool Name</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var tool in Model) { 
        <tr>
            <td>@tool.ToolName</td>
            <td>
                Borrow Tool
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="btn btn-danger">
    @Html.ActionLink("Create", "Create", new { id = Model.ElementAt(0).CommunityId})
</div>