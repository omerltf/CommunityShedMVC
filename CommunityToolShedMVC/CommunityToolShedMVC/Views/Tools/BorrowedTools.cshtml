@model List<CommunityToolShedMVC.Models.Tool>

@{
    ViewBag.Title = "Borrowed Tools";
}

<h2>Borrowed Tools</h2>

<table class="table table-sm table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Tool Name</th>
            <th>Borrower</th>
            <th>Due On</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tool in Model)
        {
            if (tool.IsOut)
            {
            <tr>
                <td>@tool.ToolName</td>
                <td>@tool.BorrowerName</td>
                <td>@tool.DueOn</td>
                <td>@using (Html.BeginForm("Return", "Tools",new { id = tool.BorrowedToolId }))
                {
                    <button class="btn btn-success" type="submit">Return Tool</button>
                }
                </td>
            </tr>
            }
        }
    </tbody>
</table>

<div class="btn btn-danger">
    @Html.ActionLink("Create", "Create")
</div>